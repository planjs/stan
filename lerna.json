{
  "packages": [
    "packages/*",
    "packages/*/*"
  ],
  "npmClient": "yarn",
  "npmClientArgs": [
    "--ignore-engines"
  ],
  "command": {
    "publish": {
      "allowBranch": "master",
      "message": "chore(release): publish %s",
      "conventionalCommits": true,
      "ignoreChanges": ["**/__fixtures__/**", "**/__tests__/**", "**/*.md"],
      "registry": "https://registry.npmjs.org/"
    },
    "version": {
      "allowBranch": "master",
      "signGitTag": false,
      "signGitCommit": false
    }
  },
  "ignoreChanges": [
    "**/fixtures/**",
    "**/__tests__/**",
    "**/*.md"
  ],
  "useWorkspaces": true,
  "version": "independent"
}
